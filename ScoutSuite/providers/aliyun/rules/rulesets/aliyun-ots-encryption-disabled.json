{
  "name": "OTS Encryption Disabled",
  "description": "Tablestore instances should have encryption at rest enabled",
  "id": "ots-encryption-disabled",
  "remediation": "Enable encryption at rest for Tablestore instances",
  "display_category": "Encryption",
  "severity": "danger",
  "resource_idempotency_attributes": ["arn:aliyun:ots:{region}:{account-id}:instance/{instance-id}"],
  "rules": {
    "filter": [
      ["ots", "instances", "{instance_id}", "EnableEncryption"]
    ],
    "conditions": ["false"]
  },
  "tests": [
    {
      "name": "OTS Encryption Disabled Test",
      "results": {
        "pass_resource": {
          "ots": {
            "instances": {
              "inst-1": {
                "arn": "arn:aliyun:ots:cn-hangzhou:123456789012:instance/inst-1",
                "EnableEncryption": true
              }
            }
          }
        },
        "fail_resource": {
          "ots": {
            "instances": {
              "inst-1": {
                "arn": "arn:aliyun:ots:cn-hangzhou:123456789012:instance/inst-1",
                "EnableEncryption": false
              }
            }
          }
        }
      }
    }
  ]
}
